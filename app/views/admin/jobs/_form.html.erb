<%= simple_form_for [:admin, @job] do |f| %>
   <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control"} %>
      <%= f.input :description, input_html: { class: "form-control"}  %>
      <%= f.input :time_lower_bound, :label => "开始时间", input_html: { class: "form-control"}  %>
      <%= f.input :time_upper_bound, :label => "结束时间", input_html: { class: "form-control"}  %>
      <%= f.input :contact_email, input_html: { class: "form-control"}  %>
      <%= f.input :is_hidden %>


   </div>





   <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." }  %>
<% end %>
