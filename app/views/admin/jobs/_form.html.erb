<%= simple_form_for [:admin, @job] do |f| %>
   <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control"} %>

      <%= f.input :description, input_html: { class: "form-control"}  %>
   </br>
      <%= f.input :time_lower_bound, :label => "托管开始",  class: "form-control" %>
      <%= f.input :time_upper_bound, :label => "托管结束",  class: "form-control"  %>
      <%= f.input :contact_email, input_html: { class: "form-control"}  %>
      <%= f.input :is_hidden %>

   <!-- 上传图片 -->

      <%= f.label :image %>
         </br>
      <%= f.file_field :image %>



   </div>




   <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." }  %>
   <%= link_to("Undo", admin_jobs_path, class: "btn btn-primary" ) %>

<% end %>
