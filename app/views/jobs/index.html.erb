<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true">
    排序
    <span class="caret" ></span>
   </button>

   <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
      <li>
      <%= link_to("按照寄养开始排序", jobs_path(:order => "by_lower_bound"))%>
      </li>
      <li>
      <%= link_to("按照寄养结束排序", jobs_path(:order => "by_upper_bound"))  %>
      </li>
      <li>
      <%= link_to("按照发表时间排序", jobs_path) %>
      </li>
   </ul>
</div>




<table class="table table-boldered">

   <thead>
      <tr>
         <th>职缺</th>
         <th>寄养开始</th>
         <th>寄养结束</th>
         <th>刊登时间</th>
         <th>照片预览</th>
      </tr>
   </thead>

   <tbody>
   <% @jobs.each do |job| %>
   <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>
      <td><%= job.time_lower_bound.strftime("%d %b. %Y") %>  </td>
      <td><%= job.time_upper_bound.strftime("%d %b. %Y") %>  </td>
      <td><%= job.created_at.strftime("%d %b. %Y") %>></td>
      
   </tr>
   <% end %>

</table>
