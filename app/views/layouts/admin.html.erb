<!DOCTYPE html>
<html>
   <head>
      <title>Dingding_at_home </title>
      <%= csrf_meta_tags %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag  'application', 'data-turbolinks-track': 'reload' %>
   </head>
   <body>
      <div class="container-fluid admin_index">
         <%= render "common/navbar"%>
         <%= render "common/flashes"%>
         <div class="row">
            <div class="col-md-2">

               <br>
               <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">


                     <li class="active">
                        <%= link_to("Jobs List", admin_jobs_path) %>
                        </br>
                        <%= link_to("Add a job", new_admin_job_path ) %>
                     </li>


               </ul>

            </div>

            <div class="col-md-10">
               <%= yield %>
            </div>
         </div>

      </div>
      <%= render "common/footer"%>
   </body>
</html>
